#!/bin/sh

plumb1()
{
	case $BROWSER in
	# Other browsers here
	# ...
	*opera*)
		$BROWSER -remote 'openURL('$i', new-page)'
		;;
	*firebird*)
		$BROWSER -remote 'openURL('$i', new-window)'
		;;
	*firefox*)
		$BROWSER -remote 'openURL('$i', new-tab)'
		;;
	*mozilla*)
		$BROWSER -remote 'openURL('$i', new-tab)'
		;;
	esac
}

if [ $# = 0 ]
then
	plumb1 about:blank
else
	for i
	do
		if [ -f "$i" ]
		then
			p=`pwd`
			i=`cleanname -d $p $i`
			i=file://$i
		fi
		plumb1 $i
	done
fi

case $BROWSER in
*opera*)
	$BROWSER -remote 'raise()'
esac

