#!/usr/local/plan9/bin/rc

if(! ~ $#* 1){
	echo 'usage: 9fs sysname'
	exit usage
}

fn srv1 {
	if(! 9p stat $1 >/dev/null >[2=1]){
		rm -f $ns/$1
		srv $2 $1
	}
}

ns=`{namespace}
switch($1){
case tip
	srv1 tip utumno.tip9ug.jp
case sources
	srv1 sources sources.cs.bell-labs.com
case *
	srv1 $1 $1
}

